
@model MRCDataLibrary._02_Models.CategoryMasterModel

<h1>Create New Category</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CATEGORY_ID" class="custom-control-label"></label>
                <input asp-for="@Model.CATEGORY_ID" class="form-control" />
                <span asp-validation-for="@Model.CATEGORY_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CATEGORY_DESCR" class="custom-control-label"></label>
                <input asp-for="@Model.CATEGORY_DESCR" class="form-control" />
                <span asp-validation-for="@Model.CATEGORY_DESCR" class="text-danger"></span>
