
@model MRCDataLibrary._02_Models.CodeMasterModel

<h1>Create New Code</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CATEGORY_ID" class="custom-control-label"></label>
                <select asp-for="@Model.CATEGORY_ID" asp-items="@Model.CategoryList" class="form-control"></select>
                <span asp-validation-for="@Model.CATEGORY_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CODE_ID" class="custom-control-label"></label>
                <input asp-for="@Model.CODE_ID" class="form-control" />
                <span asp-validation-for="@Model.CODE_ID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CODE_DESCR" class="custom-control-label"></label>
                <input asp-for="@Model.CODE_DESCR" class="form-control" />
                <span asp-validation-for="@Model.CODE_DESCR" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.SORT_ORDER" class="custom-control-label"></label>
                <input asp-for="@Model.SORT_ORDER" class="form-control" />
                <span asp-validation-for="@Model.SORT_ORDER" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create New Code" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/CodeMaster/Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

