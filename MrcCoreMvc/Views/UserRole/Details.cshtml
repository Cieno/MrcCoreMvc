@model Microsoft.AspNetCore.Identity.IdentityRole

<h1>User Role</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Id" class="form-check-label"></label>
                <input asp-for="@Model.Id" class="form-control" readonly />
                <span asp-validation-for="@Model.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="form-check-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update Role" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group">
                <a class='btn btn-danger btn-block text-white' 
                   onclick="Delete('/UserRole/Delete?id=@Model.Id');">
                    Delete
                </a>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/UserRole/Index">Back to List</a>
</div>

<script type="text/javascript">
    function Delete(url) {
        swal({
            title: "Are you sure you want to Delete?",
            text: "You will not be able to restore the data!",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: 'DELETE',
                    url: url,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            setTimeout(() => { window.location.href = "/UserRole/Index"; }, 700);
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                });
            }
        });
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


