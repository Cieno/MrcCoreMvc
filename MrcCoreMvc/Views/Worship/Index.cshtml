@model IEnumerable<MRCDataLibrary._02_Models.WorshipModel>


<div class="row">
    <div class="col-9">
        <h2 class="text-info">Schedule List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Add Schedule</a>
    </div>
</div>

@if (Model is null)
{
    <h4>Records Loading...</h4>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Worship Type</th>
                <th>Start Time</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worship in Model)
            {
                <tr>
                    <td><a href="/Attendance/AttendanceList?worshipId=@worship.WORSHIP_ID">@worship.WORSHIP_DATE.ToString("yyyy-MM-dd") </a></td>
                    <td><a href="/Worship/Details?worshipId=@worship.WORSHIP_ID">@worship.WORSHIP_NAME </a></td>
                    <td>@worship.WORSHIP_DATE.ToString("HH:mm")</td>                    
                    <td>@worship.WORSHIP_LOCATION</td>
                    <td>@worship.DESCRIPTION</td>
                </tr>
            }
        </tbody>

    </table>
}