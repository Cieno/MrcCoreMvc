@model MRCDataLibrary._02_Models.WorshipModel

<div class="row">
    <div class="col-9">
        <h2 class="text-info">@Model.WorshipDate.ToString("dd MMMM")  @Model.WorshipName</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" asp-route-worshipId="@Model.WorshipId" asp-route-worshipDate="@Model.WorshipDate" class="btn btn-info form-control text-white"><i class="fas fa-plus"></i> &nbsp;Participate in</a>
        @*@if (Model.IsDuplicate)
        {
            <label class="text-danger">You're participated in this service already.</label>
        }*@
    </div>
</div>


@if (Model is null)
{
    <h4>Records Loading...</h4>
}
else
{
    <table id="AttendanceList" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>Attendance Name</th>
                <th>Attendance Type</th>
                <th>Arrival Time</th>
                <th>Agreement / Sign</th>
                <th>Companions</th>
            </tr>
        </thead>

    </table>

    @section Scripts{
        <script src="~/js/attendance.js" wId="@Model.WorshipId"></script>
    }

    <div>
        <a href="/Worship/Index?worshipId=@Model.WorshipId">Back to Schedule List</a>
    </div>
}