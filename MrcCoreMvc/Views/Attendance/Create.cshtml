@model MRCDataLibrary._02_Models.AttendanceModel

<h1>Create New Worship</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.MemberId" class="custom-control-label"></label>
                <select asp-for="@Model.MemberId" asp-items="@Model.MemberList" class="form-control"></select>
                <span asp-validation-for="@Model.MemberId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="@Model.WorshipId" type="hidden" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Attendance/AttendanceList?worshipId=@Model.WorshipId" >Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

