@model MRCDataLibrary._02_Models.MemberModel


<h1>Add New Member</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FIRST_NAME" class="custom-control-label"></label>
                <input asp-for="FIRST_NAME" class="form-control" />
                <span asp-validation-for="FIRST_NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LAST_NAME" class="custom-control-label"></label>
                <input asp-for="LAST_NAME" class="form-control" />
                <span asp-validation-for="LAST_NAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMAIL_ADDR" class="custom-control-label"></label>
                <input asp-for="EMAIL_ADDR" class="form-control" />
                <span asp-validation-for="EMAIL_ADDR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BIRTH_DATE" class="custom-control-label"></label>
                <input asp-for="BIRTH_DATE" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="BIRTH_DATE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PHONE_NUM" class="custom-control-label"></label>
                <input asp-for="PHONE_NUM" class="form-control" />
                <span asp-validation-for="PHONE_NUM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FAMILY_ID" class="custom-control-label"></label>
                <input asp-for="FAMILY_ID" class="form-control" />
                <span asp-validation-for="FAMILY_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GROUP_CD" class="custom-control-label"></label>
                <select asp-for="GROUP_CD" asp-items="@Model.GroupSelectList" class="form-control"></select>
                <span asp-validation-for="GROUP_CD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TEAM_CD" class="custom-control-label"></label>
                <select asp-for="TEAM_CD" asp-items="@Model.TeamSelectList" class="form-control"></select>
                <span asp-validation-for="TEAM_CD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

