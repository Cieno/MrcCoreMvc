@model MRCDataLibrary._02_Models.MemberModel

<h1>Delete</h1>

@if (Model is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <div class="h4">
        Are you sure you want to delete @Model.FirstName @Model.LastName's information?
    </div>
    <form asp-action="Delete">
        <input asp-for="@Model.MemberId" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" href="/Member/Detail?memberId=@Model.MemberId">Cancel</a>
    </form>
}