@model IEnumerable<MRCDataLibrary._02_Models.MemberModel>

@{
    ViewData["Title"] = "MemberListView";
}

<div class="row">
    <div class="col-9">
        <h2 class="text-info">Member List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Create" class="btn btn-info form-control text-white">Add Member</a>
    </div>
</div>

@if (Model is null)
{
    <h4>Records Loading...</h4>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Birth Date</th>
                <th>Family</th>
                <th>Group</th>
                <th>Team</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td><a href="/Member/Detail?memberId=@member.MEMBER_ID"> @member.LAST_NAME   @member.FIRST_NAME </a></td>
                    <td>@member.EMAIL_ADDR</td>
                    <td>@member.PHONE_NUM</td>
                    <td>@member.BIRTH_DATE.ToString("yyyy-MM-dd")</td>
                    <td>@member.FAMILY_ID</td>
                    <td>@member.GROUP_NAME</td>
                    <td>@member.TEAM_NAME</td>
                </tr>
            }
        </tbody>

    </table>
}